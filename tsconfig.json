{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts"]
}
